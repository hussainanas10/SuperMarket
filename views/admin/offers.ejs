            <div id="layoutSidenav">

	          <div id="layoutSidenav_content">
    
		   <main>
                    <div class="container-fluid">
                        <h2 class="mt-30 page-title">Offers</h2>
                        <ol class="breadcrumb mb-30">
                            <li class="breadcrumb-item"><a href="/admin/">Dashboard</a></li>
                            <li class="breadcrumb-item active">Offers</li>
                        </ol>
                        <div class="row justify-content-between">
							<div class="col-lg-12">
								<a href="/admin/add-offer" class="add-btn hover-btn">Add New</a>
							</div>
							<div class="col-lg-3 col-md-4">
								<div class="bulk-section mt-30">
									<div class="input-group">
										<select id="action" name="action" class="form-control">
											<option selected>Bulk Actions</option>
											<option value="Active">Active</option>
											<option value="Inactive">Inactive</option>
											<option value="Delete">Delete</option>
										</select>
										<div class="input-group-append">
											<button class="status-btn hover-btn" type="submit">Apply</button>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-5 col-md-6">
								<div class="bulk-section mt-30">
									<div class="search-by-name-input">
										<input type="text" class="form-control" placeholder="Search">
									</div>
									<div class="input-group">
										<select id="categeory" name="categeory" class="form-control">
											<option selected>Active</option>
											<option value="1">Inactive</option>
										</select>
										<div class="input-group-append">
											<button class="status-btn hover-btn" type="submit">Search Offer</button>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-md-12">
								<div class="card card-static-2 mt-30 mb-30">
									<div class="card-title-2">
										<h4>All Offers</h4>
									</div>
									<div class="card-body-table">
										<div class="table-responsive">
											<table class="table ucp-table table-hover">
												<thead>
													<tr>
														<th style="width:60px"><input type="checkbox" class="check-all"></th>
														<th style="width:130px">Image</th>
														<th>Title</th>
														<th>Description</th>
														<th>Status</th>
														<th>Action</th>
													</tr>
												</thead>
												<tbody>
												<%for( var i=0;i< list.length;i++){%>
													<tr>
														<td><input type="checkbox" class="check-item" name="ids[]" value="3"></td>
														<td>
															<div class="offer-img">
																<img src="/uploads/<%=list[i].offerimage%>" alt="">
															</div>
														</td>
														<td>ðŸ“¢ <%=list[i].title%> </td>
														<td><%=list[i].description%></td>
														<td><span class="badge-item badge-status"><%=list[i].status%></span></td>
														<td class="action-btns">
															<a href="/admin/edit-offer/<%=list[i].id%>" class="edit-btn"><i class="fas fa-edit"></i> Edit</a>
														</td>
													</tr>
													<%}%>
													
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
                        </div>
                    </div>
                </main>
	          </div>
            </div>
     